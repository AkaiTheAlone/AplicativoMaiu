<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AplicativoMaiu.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AplicativoMaiu"
    Shell.FlyoutBehavior="Disabled"
    Title="Healme">

    <FlyoutItem Title="Home" FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent
            Title="Início"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            Icon="home.png"/>
        <ShellContent
            Title="Tarefas"
            ContentTemplate="{DataTemplate local:Tarefas}"
            Route="Tarefas"
            Icon="lista.png"/>
        <ShellContent
            Title="Meditação"
            ContentTemplate="{DataTemplate local:Meditacao}"
            Route="Meditacao" 
            Icon="meditar.png"/>

        <ShellContent
            Title="Sobre"
            ContentTemplate="{DataTemplate local:Sobre}"
            Route="Sobre" 
            Icon="informacoes.png"/>
        <ShellContent
            Title="Configurar"
            ContentTemplate="{DataTemplate local:Configuracoes}"
            Route="Configurações" 
            Icon="configuracao.png"/>
    </FlyoutItem>

</Shell>
