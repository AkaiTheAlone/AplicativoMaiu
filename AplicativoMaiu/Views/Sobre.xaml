<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicativoMaiu.Sobre"
             Title="Sobre">
    <StackLayout Padding="13">
        <VerticalStackLayout Padding="15">
            <Label Text="Informações adicionais"
               FontSize="Title"
               Padding="30"/>
            <Button 
            Text="Política de Privacidade"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Clicked="PrivacidadeView"
            WidthRequest="230"
            Margin="0,10,0,0"/>
            <Button Text="Preciso de ajuda psicológica"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    Clicked="CVV"
                    WidthRequest="230"
                    Margin="0,10,0,0"/>
            <Button Text="Sobre Nós"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    Clicked="CVV"
                    WidthRequest="230"
                    Margin="0,10,0,0"/>
        </VerticalStackLayout>
    </StackLayout>
</ContentPage>